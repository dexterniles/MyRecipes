# PrepSync Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/prepsync

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Example database URLs:
# Local PostgreSQL: postgresql://username:password@localhost:5432/prepsync
# Vercel Postgres: postgresql://username:password@host:port/database
# Neon: postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb
# Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres