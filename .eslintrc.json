{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-var": "error",
    "prefer-const": "warn",
    "prefer-arrow-callback": "warn",
    "arrow-body-style": ["warn", "as-needed"],
    "no-trailing-spaces": "warn",
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "semi": ["warn", "always"]
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "module": "readonly",
    "require": "readonly",
    "process": "readonly",
    "__dirname": "readonly",
    "exports": "readonly"
  }
}
